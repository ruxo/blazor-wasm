@inject NavigationManager NavManager

<div class="jumbotron">
    <h1 class="display-4 text-center">Welcome to Blazing Trails</h1>
    <p class="lead text-center">Find the most beautiful hiking trails using our blazing fast search!</p>
    <p class="mt-4">
        <input type="text" placeholder="Search for a trail..." class="form-control form-control-lg" 
               @onkeydown="SearchForTrail"
               @bind="searchTerm" @bind:event="oninput" />
    </p>
</div>

@code {
    string searchTerm = "";

    void SearchForTrail(KeyboardEventArgs args) {
        if (args.Key == "Enter")
            NavManager.NavigateTo($"/search/{searchTerm}");
    }
}