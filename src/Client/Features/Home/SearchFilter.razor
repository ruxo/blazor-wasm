@inject NavigationManager NavManager

<div class="filters">
    <label for="maxLength">Max Length</label>
    <input id="maxLength" type="number" class="form-control" @bind="maxLength" />
    <button class="btn btn-outline-primary" @onclick="FilterSearchResults">Filter</button>
    <button class="btn btn-outline-secondary" @onclick="ClearSearchFilter">Clear</button>
</div>

@code {

    [Parameter, EditorRequired]
    public string SearchTerm { get; set; } = default!;

    int maxLength;

    void FilterSearchResults() => NavManager.NavigateTo($"/search/{SearchTerm}/maxlength/{maxLength}");

    void ClearSearchFilter() {
        maxLength = 0;
        NavManager.NavigateTo($"/search/{SearchTerm}");
    }
}